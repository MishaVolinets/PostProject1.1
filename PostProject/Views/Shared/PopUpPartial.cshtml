@model PostProject.Models.PostModel

    <div id="PU-block-Tit">
        <input type="hidden" value="@Model.Id" id="ModelID" />
        <div id="PU-Tit">
            Title:
        </div>
        <div id="PU-in-Tit">
            <textarea cols="15" rows="2.5" id="textTit">@Model.Title</textarea>
        </div>
    </div>
    <div id="PU-block-Des">
        <div id="PU-Des">
            Description
        </div>
        <div id="PU-in-Des">
            <textarea cols="30" rows="10" id="textDes">@Model.Description</textarea>
        </div>
    </div>
    <div id="PU-block-Sub">
        <button id="buttonSave">Зберегти</button>
    </div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#buttonSave").click(function () {
            var id = $("#ModelID").val();
            var title = $("#textTit").val();
            var description = $("#textDes").val();
            $.ajax({
                url: '@Url.Action("SavePost","Home")',
                type: "post",
                datatype: "html",
                data: { title, description, id },
                success: function (data) {
                    $("#PU-block").css("display", "none");
                    location.reload();
                }
            });
        });
    });
</script>
